<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="20dp">

    <LinearLayout
        android:id="@+id/cardgame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bgitemgame"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/Imagegame"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/ml" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/namagames"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Mobile Legends: Bang-Bang"
                android:textColor="#FFFF"
                android:textSize="13dp"
                android:fontFamily="@font/montserratbold"

                />

            <Button
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_marginLeft="60dp"

                android:background="@drawable/borderbutton"
                android:gravity="center"
                android:text="Buy"
                android:textAllCaps="false"
                android:textColor="#FFFF"
                android:textSize="11dp"
                android:fontFamily="@font/montsemibold"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>