<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Register">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="80dp"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VA CASH"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please create your first account to start exploring in VA Cash"
            android:textColor="#D9D9D9"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="35dp"
            android:layout_marginHorizontal="20dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="35dp"
            >

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Name"
                android:textColor="#D9D9D9"
                android:textColorHint="#D9D9D9"
                android:paddingHorizontal="15dp"
                android:textSize="17dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/bordertext"
                />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Email"
                android:textColor="#D9D9D9"
                android:textColorHint="#D9D9D9"
                android:paddingHorizontal="15dp"
                android:textSize="17dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bordertext"
                />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="#D9D9D9"
                android:textColorHint="#D9D9D9"
                android:paddingHorizontal="15dp"
                android:textSize="17dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bordertext"
                />

            <EditText
                android:id="@+id/confPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:textColor="#D9D9D9"
                android:textColorHint="#D9D9D9"
                android:paddingHorizontal="15dp"
                android:textSize="17dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bordertext"
                />

            <TextView
                android:id="@+id/errorMsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Error Label"
                android:textAlignment="textStart"
                android:textColor="#F63A51"
                android:layout_marginTop="15dp"
                android:textSize="15dp"
                android:visibility="invisible"
                />

        </LinearLayout>

        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/btn"
            android:gravity="center"
            android:text="Sign Up"
            android:textColor="#FFFFFF"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Already have an account?"
                android:textColor="#FFFFFF"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:fontFamily="@font/montregular"
                />

            <TextView
                android:id="@+id/signIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/textSignUp"
                android:textColor="#FFFFFF"
                android:textSize="15dp"
                android:layout_marginLeft="6dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:clickable="true"
                android:fontFamily="@font/montserratbold"
                />

        </LinearLayout>




    </LinearLayout>

</LinearLayout>