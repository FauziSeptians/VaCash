
<!-- res/drawable/toggle_button_selector.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Default state -->
    <item android:state_pressed="false" android:state_checked="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke
                android:width='1.5dp' android:color="#FFFF"/>
            <corners
                android:radius="40dp"/>
        </shape>

    </item>

    <!-- Clicked (toggled) state -->
    <item android:state_pressed="true" android:state_checked="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke
                android:width='1.5dp' android:color="#FFFF"/>
            <corners
                android:radius="40dp"/>
            <solid
                android:color="#FFFF"/>
        </shape>
</item>
</selector>
